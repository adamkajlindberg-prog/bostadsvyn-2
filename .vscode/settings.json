{
  "[css]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "css.customData": [".vscode/tailwind.json"],
  "editor.codeActionsOnSave": {
    "source.action.useSortedAttributes.biome": "explicit",
    "source.action.useSortedKeys.biome": "explicit",
    "source.action.useSortedProperties.biome": "explicit",
    "source.fixAll.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  },
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": true,
  "editor.linkedEditing": true,
  "editor.tabSize": 2,
  "explorer.autoReveal": false,
  "files.watcherExclude": {
    "**/*.gen.*": true
  },
  "javascript.preferences.renameMatchingJsxTags": true,
  "search.exclude": {
    "**/.*/**": true,
    "**/.env.*": false,
    "**/.env*": false,
    // "/apps/site/**/*": true,
    // "/apps/api/**/*": true,
    "**/node_modules": true
  },
  // "files.exclude": {
  // },
  "tailwindCSS.classAttributes": ["class", "className"],
  "tailwindCSS.experimental.classRegex": [
    ["\\b\\w+[cC]lassName\\s*=\\s*[\"']([^\"']*)[\"']"],
    ["\\b\\w+[cC]lassName\\s*=\\s*`([^`]*)`"],
    ["[\\w]+[cC]lassName[\"']?\\s*:\\s*[\"']([^\"']*)[\"']"],
    ["[\\w]+[cC]lassName[\"']?\\s*:\\s*`([^`]*)`"],
    ["className:\\s*[\"']([^\"']*)[\"']"],
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
  ],
  "tailwindCSS.experimental.configFile": {
    "apps/site/src/app/globals.css": "apps/site/**"
  },
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.preferences.autoImportFileExcludePatterns": [
    "next/router.d.ts",
    "next/dist/client/router.d.ts",
    "**/*.gen.*"
  ],
  "typescript.preferences.renameMatchingJsxTags": true,
  "typescript.tsdk": "node_modules/typescript/lib",
  "python.defaultInterpreterPath": "${workspaceFolder}/apps/gpu/.pixi/envs/default/bin/python"
}
