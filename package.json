{
  "name": "bostadsvyn",
  "private": true,
  "type": "module",
  "module": "index.ts",
  "workspaces": [
    "apps/site",
    "apps/scripts",
    "packages/*"
  ],
  "scripts": {
    "auth:generate": "with-env 'bunx @better-auth/cli@latest generate --config apps/site/src/auth/config.ts --output packages/db/pg/schema/user.ts'",
    "build": "turbo build",
    "clean": "git clean -fxd -e .env.local",
    "db:push": "bun -F db push",
    "dev": "turbo dev",
    "dev-site": "bunx turbo dev --filter=bostadsvyn",
    "knip": "with-env knip --config knip.config.ts",
    "lint": "biome check . && manypkg check ",
    "lint-fix": "biome check --write --unsafe . && manypkg fix && sort-package-json",
    "test": "turbo test",
    "type-check": "turbo type-check",
    "up": "bunx npm-check-updates -ws --root --format group -u",
    "generate-mock-listings": "bun run --filter='@bostadsvyn/scripts' generate-mock-listings"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@manypkg/cli": "0.25.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/bun": "latest",
    "@types/node": "24.10.1",
    "knip": "5.70.2",
    "next-intl": "^4.5.6",
    "react-hook-form": "^7.67.0",
    "sort-package-json": "^3.5.0",
    "turbo": "2.6.1",
    "typescript": "5.9.3"
  },
  "packageManager": "bun@1.3.3"
}
